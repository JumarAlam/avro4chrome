{
    "name": "Avro Keyboard",
    "version": "1.2",
    "description": "Official Avro Keyboard for Google Chrome",
    "background_page": "background.html",
    "page_action" : {
        "default_icon" : "icon-16-dim.png",
        "default_title" : "Avro Keyboard"
    },
    "permissions": ["tabs"],
    "icons" : {
        "16" :  "icon-16.png",
        "48" : "icon.png",
        "128" : "icon-128.png"
    },
    "content_scripts" : [
      {
        "matches" : [
          "http://*/*",
          "https://*/*"
        ],
        "js" : ["js/jquery-1.7.1.min.js", "js/avro-1.1-beta.min.js", "js/content.js"],
        "run_at" : "document_end",
        "all_frames" : true
      }
    ]
}